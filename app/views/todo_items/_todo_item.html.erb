  <div class="row clearfix">
    <% if todo_item.completed? %>
    <div class="todo_item">
      <p style="opacity: 0.4;"><strike><%= todo_item.content %></strike></p>
    </div>
    <div>
    <%= link_to "Marcar como completo", complete_todo_list_todo_item_path(@todo_list, todo_item.id), method: :patch %>    
    </div>
    
    <div class="trash">    
      <%= link_to "Deletar", todo_list_todo_item_path(@todo_list, todo_item.id), method: :delete, data: {confirm: "Tem certeza?"} %>    
    </div>
  <% else %>
    <div>
    <%= link_to "Marcar como completo", complete_todo_list_todo_item_path(@todo_list, todo_item.id), method: :patch %>    
    </div>
    <div class="todo_item">
      <p><%= todo_item.content %></p>
    </div>
    <div class="trash">    
      <%= link_to "Deletar", todo_list_todo_item_path(@todo_list, todo_item.id), method: :delete, data: {confirm: "Tem certeza?"} %>    
    </div>
    <% end %>
  </div>