<ul class="collection">
  <% if todo_item.completed? %>
    <li class="collection-item">
      <%= link_to "✓", complete_todo_list_todo_item_path(@todo_list, todo_item.id), method: :patch %>    
      <%= link_to "×", todo_list_todo_item_path(@todo_list, todo_item.id), method: :delete, data: {confirm: "Tem certeza?"} %>    
      <spam style="opacity: 0.4;"><strike><%= todo_item.content %></strike></spam>
    </li>
  <% else %>
    <li class="collection-item">
      <%= link_to "✓", complete_todo_list_todo_item_path(@todo_list, todo_item.id), method: :patch %>    
      <%= link_to "×", todo_list_todo_item_path(@todo_list, todo_item.id), method: :delete, data: {confirm: "Tem certeza?"} %>    
      <spam><%= todo_item.content %></spam>   
    </li>
  <% end %>
</ul>